extends base


block content
	.card.text-bg-light.vh-100.d-flex.flex-column#card-start
		img.card-img(src=`/img/posts/${post.imageCover}` onerror="this.onerror=null; this.src='/img/cardDefaultImg.jpeg'" alt='Alternative text' style='object-fit: cover; height: 100%; width: 100%;')
		.card-img-overlay.d-flex.flex-column.justify-content-end
			h1.display-4.fst-italic.text-body-emphasis.py-2= post.title
			a(href='#anchor')
				botton.btn.btn-outline-dark.btn-lg.align-self-start.fs-2 Explore
	main.py-5
		#anchor.bg-light.rounded-3
			.container-fluid.py-1
				textarea#post-content-viewer= post.content
			